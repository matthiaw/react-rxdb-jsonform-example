{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-06/schema#",
  "$id": "http://example.com/example.json",
  "title": "Comment Schema",
  "description": "Database schema for a simple comment",
  "version": 0,
  "type": "object",
  "properties": {
    "created": {
      "$id": "/properties/created",
      "type": "string",
      "format": "date",
      "title": "Created Date",
      "description": "Date on which this comment is created.",
      "default": "",
      "examples": [
        "2018-01-01"
      ]
    },
    "content": {
      "$id": "/properties/content",
      "type": "string",
      "title": "Comment Content",
      "description": "Content of the comment",
      "default": "",
      "examples": [
        "Hallo Welt!"
      ]
    }
  }
}
